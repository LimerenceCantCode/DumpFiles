    @SubscribeEvent
    public static void onEntityRegister(final RegistryEvent.Register<EntityEntry> event)
    {
    	ResourceLocation ReLoc = new ResourceLocation(AdditionalTraits.MOD_ID + ":" +"NatHook");
    	int id = 38;
    	
    	event.getRegistry().register(EntityEntryBuilder.create()
    			.name(AdditionalTraits.MOD_ID +"NatHook")
    			.entity(EntityNatFishHook.class)
    			.id(ReLoc, id++)
    			.build()
    			
    			);
    			
    	
    	
    	
    	
    	//event.getRegistry().register(new ResourceLocation(AdditionalTraits.MOD_ID + ":" +"NatHook"), EntityNatFishHook.class, "NatHook", AdditionalTraits.instance, 11, 1, true);
    			
    		
    	
    	
    	
    	
    	event.getRegistry().registerAll(EntityInit.ENTITIES.toArray(new EntityEntry[0]));
    }
    
    
    
}
